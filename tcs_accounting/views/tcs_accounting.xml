<odoo>
    <data>
        <record model="ir.ui.view" id="view_invoice_asset_category_new">
            <field name="name">account.invoice.supplier.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="tcs_percentage" invisible="move_type not in ('out_invoice')"/>
                    <field name="tcs_amounts" invisible="1"/>
                    <field name="tcs_credit_amts" invisible="move_type not in ('out_invoice') or state != 'posted'"/>
                    <field name="tds_percentage" invisible="move_type not in ('in_invoice')"/>
                    <field name="tds_amt" invisible="move_type not in ('in_invoice')"/>
                    <field name="net_amounts" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_invoice_l10_new">
            <field name="name">account.invoice.l10.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_in.invoice_form_inherit_l10n_in"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='l10n_in_gst_treatment']" position="after">
                    <field name="tds_percentage" invisible="move_type not in ('in_invoice')"/>
                    <field name="tds_sec" force_save="1" readonly="1" invisible="move_type not in ('in_invoice')"/>
                    <field name="tcs_percentage" invisible="move_type not in ('out_invoice')"/>
                    <field name="tcs_sec" force_save="1" readonly="1" invisible="move_type not in ('out_invoice')"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>