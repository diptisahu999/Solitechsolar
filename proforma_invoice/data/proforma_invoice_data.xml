<odoo>
    <data>

        <record id="paperformat_proforma_one_page" model="report.paperformat">
            <field name="name">Proforma One Page</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="disable_shrinking" eval="False"/>
        </record>

        <record id="action_report_proforma" model="ir.actions.report">
            <field name="name">Proforma Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">proforma_invoice.report_proforma</field>
            <field name="paperformat_id" ref="proforma_invoice.paperformat_proforma_one_page"/>
        </record>

    </data>
</odoo>
