<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_custom_workflow" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.custom.workflow</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="custom_so_id" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='action_confirm']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <xpath expr="//button[@id='create_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@id='create_invoice_percentage']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="action_confirm_custom_so" 
                        string="SO Confirm" 
                        type="object" 
                        class="oe_highlight" 
                        invisible="state not in ('draft', 'sent') or custom_so_id"/>
            </xpath>

            <div name="button_box" position="inside">
                <button name="action_view_custom_so" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-check-square-o" 
                        invisible="not custom_so_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Confirmed</span>
                        <span class="o_stat_text">SO</span>
                    </div>
                </button>
                
                <button class="oe_stat_button" 
                        type="object" 
                        name="action_view_proforma_invoices" 
                        icon="fa-file-text-o" 
                        invisible="proforma_invoice_count == 0">
                    <field string="Proformas" name="proforma_invoice_count" widget="statinfo"/>
                </button>
            </div>

        </field>
    </record>
</odoo>