<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_inherit_proforma" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.proforma</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="action_create_proforma_invoice" string="Create Proforma Invoice" type="object" class="oe_highlight" invisible="state not in ('sale', 'done')"/>
            </xpath>
        </field>
    </record>
    <record id="sale_order_form_inherit_hide_invoice_buttons" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.hide.buttons</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//button[@id='create_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//button[@id='create_invoice_percentage']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

    <record id="sale_order_view_form_inherit_proforma_button" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.proforma.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button"
                    type="object"
                    name="action_view_proforma_invoices"
                    icon="fa-file-text-o"
                    invisible="proforma_invoice_count == 0">
                    <field string="Proformas" name="proforma_invoice_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>