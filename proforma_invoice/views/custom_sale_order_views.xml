<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_custom_sale_order_form" model="ir.ui.view">
        <field name="name">custom.sale.order.form</field>
        <field name="model">custom.sale.order</field>
        <field name="arch" type="xml">
            <form string="Sales Order" create="0" edit="0">
                <header>
                    <button name="action_create_proforma_from_custom_so" 
                            string="Create Proforma Invoice" 
                            type="object" 
                            class="oe_highlight"/>
                    
                    <button name="action_print_so_custom_report"
                            string="SO Print"
                            type="object"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <field name="origin_quotation_id" invisible="1"/>
                    <field name="proforma_count" invisible="1"/>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_source_quotation"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                invisible="not origin_quotation_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Source</span>
                                <span class="o_stat_text">Quotation</span>
                            </div>
                        </button>

                         <button name="action_view_proformas"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-file-text-o"
                            invisible="proforma_count == 0">
                            <field name="proforma_count" widget="statinfo" string="Proformas"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="partner_id" string="Contact" widget="res_partner_many2one_context" context="{'show_address': 1}" options='{"always_reload": True}' readonly="1"/>
                            <field name="partner_invoice_id" groups="sale.group_delivery_invoice_address" context="{'show_address': 1}" options='{"always_reload": True}' readonly="1"/>
                            <field name="partner_shipping_id" groups="sale.group_delivery_invoice_address" context="{'show_address': 1}" options='{"always_reload": True}' readonly="1"/>
                        </group>
                        <group>
                            <field name="date_order" readonly="1"/>
                            <field name="validity_date" readonly="1"/>
                            <field name="payment_term_name" readonly="1"/> 
                            <field name="user_id" widget="many2one_avatar_user" readonly="1"/>
                            <field name="client_order_ref" readonly="1"/>
                            <field name="origin_quotation_id" string="Source Ref" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Order Lines" name="order_lines">
                            <field name="line_ids" readonly="1">
                                <tree create="0" delete="0" edit="0">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="wattage" optional="show"/>
                                    <field name="product_uom_qty"/>
                                    
                                    <field name="price_unit" string="Rate (₹/Wp)"/>
                                    
                                    <field name="unit_price_per_nos" string="Unit Price (₹/Nos)" optional="show"/>
                                    
                                    <field name="tax_names" string="Taxes"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    <field name="note" nolabel="1" placeholder="Terms and conditions..." readonly="1"/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    
                                    <field name="cgst_amount" widget='monetary' options="{'currency_field': 'currency_id'}" invisible="cgst_amount == 0"/>
                                    <field name="sgst_amount" widget='monetary' options="{'currency_field': 'currency_id'}" invisible="sgst_amount == 0"/>
                                    <field name="igst_amount" widget='monetary' options="{'currency_field': 'currency_id'}" invisible="igst_amount == 0"/>
                                    
                                    <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}" invisible="1"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total" />
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="clearfix"/>
                            </group>
                        </page>
                        <page string="Other Info" name="other_info">
                            <group>
                                <group string="Invoicing">
                                    <field name="fiscal_position_name" readonly="1"/>
                                </group>
                                <group string="Delivery">
                                    <field name="incoterm_name" readonly="1"/>
                                    <field name="incoterm_location" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_custom_sale_order_tree" model="ir.ui.view">
        <field name="name">custom.sale.order.tree</field>
        <field name="model">custom.sale.order</field>
        <field name="arch" type="xml">
            <tree string="Confirmed Sales Orders" create="0">
                <field name="name"/>
                <field name="date_order"/>
                <field name="partner_id" string="Contact"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="amount_total" widget="monetary"/>
            </tree>
        </field>
    </record>

    <record id="action_custom_sale_order" model="ir.actions.act_window">
        <field name="name">Confirmed Sales Orders</field>
        <field name="res_model">custom.sale.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_custom_sale_order" 
              name="Confirmed SOs" 
              parent="sale.sale_order_menu" 
              action="action_custom_sale_order" 
              sequence="15"/>
    <!-- Add SO to Top Menu Bar -->
    <menuitem id="menu_custom_sale_order_top" 
            name="SO" 
            action="action_custom_sale_order" 
            sequence="5"/> 

    <record id="view_custom_sale_order_form_buttons" model="ir.ui.view">
        <field name="name">custom.sale.order.form.help.upload.buttons</field>
        <field name="model">custom.sale.order</field>
        <field name="inherit_id" ref="proforma_invoice.view_custom_sale_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_print_so_custom_report']" position="after">
                
                <button name="action_open_help_so"
                        type="object"
                        string="Help"
                        icon="fa-question-circle"/>

                <button type="action"
                        name="%(base.action_attachment)d"
                        string="Upload"
                        icon="fa-paperclip"
                        groups="base.group_system"
                        context="{
                            'default_res_model': 'custom.sale.order',
                            'default_res_id': active_id
                        }"/>
                <button name="action_open_workflow_so_image"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-sitemap"> <div class="o_stat_info">
                        <span class="o_stat_text">Workflow</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>


         
</odoo>