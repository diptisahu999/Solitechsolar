<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_proforma_invoice" model="ir.actions.report">
        <field name="name">Proforma Invoice</field>
        <field name="model">proforma.invoice</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">proforma_invoice.report_proforma</field>
        <field name="report_file">proforma_invoice.report_proforma</field>
        <field name="print_report_name">'Proforma - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_proforma_invoice"/>
        <field name="binding_type">report</field>
    </record>

    <record id="proforma_invoice_view_form" model="ir.ui.view">
        <field name="name">proforma.invoice.form</field>
        <field name="model">proforma.invoice</field>
        <field name="arch" type="xml">
            <form create="false">
                <header>
                    <button name="action_post" string="Confirm" class="oe_highlight" type="object" invisible="state != 'draft'"/>
                    <button string="PI Print" type="action" name="%(proforma_invoice.action_report_proforma_invoice)d" class="oe_highlight"/>
                    <button name="button_draft" string="Reset to Draft" type="object" invisible="state not in ('posted', 'cancel')"/>
                    <button name="button_cancel" string="Cancel" type="object" invisible="state not in ('draft', 'posted')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <field name="sale_order_id" invisible="1"/>
                    <field name="custom_so_id" invisible="1"/>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_source_quotation"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                invisible="not sale_order_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Source</span>
                                <span class="o_stat_text">Quotation</span>
                            </div>
                        </button>
                        <button name="action_view_custom_so"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                invisible="not custom_so_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Confirmed</span>
                                <span class="o_stat_text">Order</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <span invisible="state != 'draft'">Draft PI</span>
                            <span invisible="state == 'draft'"><field name="name" readonly="1"/></span>
                        </h1>
                    </div>
                        <group>
                            <group>
                                <field name="partner_id" string="Customer" domain="[('parent_id','=',partner_id)]"/>
                                <!-- <button name="action_open_partner_view" type="object"/> -->
                                <field name="partner_shipping_id" string="Place of supply" domain="[('parent_id','=',partner_id)]" options="{'no_create': True, 'no_quick_create': True}"  create="false"/>
                                <field name="l10n_in_gst_treatment" string="GST Treatment"/>
                            </group>

                            <group>
                                <field name="po_number"/>
                                <!-- <field name="po_date"/> -->
                                <field name="pi_chr"/>
                                <field name="sr_number" string="Revision No." readonly="1"/>
                                <field name="pi_date"/>
                                <field name="invoice_date"/>
                                <field name="invoice_date_due"/>
                                <field name="invoice_payment_term_id"/>
                                <field name="sample_type"/>
                                <field name="source_id"/>
                                <field name="project_id"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                    <notebook>
                        <page string="Invoice Lines" name="invoice_lines">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name" string="Description" column_invisible="1"/>
                                    <!-- <field name="inch_feet_type" string="Inch/Feet"/> -->
                                    <field name="discount"/>
                                    <field name="product_type"/>
                                    <field name="quantity"/>
                                    <field name="wattage" optional="show"/>
                                    <field name="price_unit" string="Price (₹/Wp)"/>
                                    <field name="unit_price_per_nos" string="Actual Price (₹/Nos)" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="actual_price" column_invisible="1"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="price_subtotal" string="Tax excl." widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="remarks"/>
                                </tree>

                                <!-- <form string="Invoice Line" create="false" edit="false">
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="product_id" readonly="1"/>
                                                <field name="name" readonly="1"/>
                                                <field name="product_type" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="quantity" readonly="1"/>
                                                <field name="price_unit" readonly="1"/>
                                                <field name="tax_ids" widget="many2many_tags" readonly="1"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="remarks" readonly="1"/>
                                        </group>
                                    </sheet>
                                    <footer>
                                        <button string="Close" class="btn-secondary" special="cancel"/>
                                    </footer>
                                </form> -->
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="cgst_amount" string="CGST" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="sgst_amount" string="SGST" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="igst_amount" string="IGST" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_total" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <field name="narration" placeholder="Terms and conditions..."/>
                        </page>
                        <page string="Other Info" name="other_info">
                            <group>
                               <!-- <field name="user_id" string="Salesperson"/> -->
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="proforma_invoice_view_tree" model="ir.ui.view">
        <field name="name">proforma.invoice.tree</field>
        <field name="model">proforma.invoice</field>
        <field name="arch" type="xml"><tree><field name="name" string="Number" decoration-bf="1"/><field name="partner_id"/><field name="invoice_date"/><field name="user_id"/><field name="amount_total" sum="Total"/><field name="state"/></tree></field>
    </record>
    
    <record id="proforma_invoice_view_search" model="ir.ui.view">
        <field name="name">proforma.invoice.search</field>
        <field name="model">proforma.invoice</field>
        <field name="arch" type="xml"><search><field name="name" string="Number"/><field name="partner_id"/><field name="pi_chr"/><field name="po_number"/><separator/><filter string="My PIs" name="my_pis" domain="[('user_id', '=', uid)]"/><group expand="0" string="Group By"><filter string="Salesperson" name="salesperson" domain="[]" context="{'group_by': 'user_id'}"/><filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/></group></search></field>
    </record>

    <record id="action_proforma_invoice" model="ir.actions.act_window">
        <field name="name">Proforma Invoices</field>
        <field name="res_model">proforma.invoice</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_proforma_root" name="Proforma Invoices" sequence="25"/>
    <menuitem id="menu_proforma_list" name="Proforma Invoices" parent="menu_proforma_root" action="action_proforma_invoice"/>

    <record id="view_proforma_invoice_form_buttons_new" model="ir.ui.view">
        <field name="name">proforma.invoice.form.add.buttons</field>
        <field name="model">proforma.invoice</field>
        <field name="inherit_id" ref="proforma_invoice.proforma_invoice_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[2]" position="after">
                
                <button name="action_open_help_pi"
                        type="object"
                        string="Help"
                        icon="fa-question-circle"/>

                <button name="action_open_workflow_pi_image"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-sitemap"> <div class="o_stat_info">
                        <span class="o_stat_text">Workflow</span>
                    </div>
                </button>

                
            </xpath>
        </field>
    </record>

</odoo>