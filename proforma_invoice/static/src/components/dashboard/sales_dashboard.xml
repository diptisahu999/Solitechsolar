<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="proforma_invoice.SalesDashboard" owl="1">
        <div class="o_sales_dashboard h-100 d-flex flex-column">
            <!-- Header -->
            <div class="dashboard-header bg-white border-bottom px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <h2 class="mb-0">Sales Dashboard</h2>
                    </div>
                    <div class="col">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary" t-att-class="{'active': !state.showTeamView}" t-on-click="() => state.showTeamView = false">
                                My Performance
                            </button>
                            <button t-if="state.dashboardData.is_sales_manager" class="btn btn-outline-primary" t-att-class="{'active': state.showTeamView}" t-on-click="() => state.showTeamView = true">
                                Team Performance
                            </button>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-sm btn-primary" t-on-click="refreshDashboard">
                            <i class="fa fa-refresh me-1"/>Refresh
                        </button>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="flex-grow-1 overflow-auto bg-light">
                <div class="container-fluid py-4">
                    
                    <!-- Loading State -->
                    <div t-if="state.isLoading" class="text-center py-5">
                        <i class="fa fa-spinner fa-spin fa-3x text-primary"/>
                        <p class="mt-3">Loading dashboard data...</p>
                    </div>

                    <!-- Dashboard Content -->
                    <div t-else="">
                        
                        <!-- KPI Cards Row 1 - Pipeline -->
                        <div class="row mb-4">
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100" t-on-click="openMyLeads">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <p class="text-muted mb-1 small">Leads</p>
                                                <h3 class="mb-0 text-primary">
                                                    <t t-esc="state.showTeamView ? state.dashboardData.team_leads_count : state.dashboardData.my_leads_count"/>
                                                </h3>
                                            </div>
                                            <div class="icon-wrapper bg-primary bg-opacity-10 rounded-circle p-3">
                                                <i class="fa fa-users text-primary"/>
                                            </div>
                                        </div>
                                        <div class="progress" style="height: 4px;">
                                            <div class="progress-bar bg-primary" style="width: 100%"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100" t-on-click="openMyOpportunities">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <p class="text-muted mb-1 small">Opportunities</p>
                                                <h3 class="mb-0 text-warning">
                                                    <t t-esc="state.showTeamView ? state.dashboardData.team_opportunities_count : state.dashboardData.my_opportunities_count"/>
                                                </h3>
                                            </div>
                                            <div class="icon-wrapper bg-warning bg-opacity-10 rounded-circle p-3">
                                                <i class="fa fa-rocket text-warning"/>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between small text-muted">
                                            <span>Won: <t t-esc="state.dashboardData.my_won_opportunities_count"/></span>
                                            <span>Lost: <t t-esc="state.dashboardData.my_lost_opportunities_count"/></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <p class="text-muted mb-1 small">Pipeline Value</p>
                                                <h3 class="mb-0 text-info">
                                                    <t t-esc="formatCurrency(state.showTeamView ? state.dashboardData.team_pipeline_revenue : state.dashboardData.my_pipeline_revenue)"/>
                                                </h3>
                                            </div>
                                            <div class="icon-wrapper bg-info bg-opacity-10 rounded-circle p-3">
                                                <i class="fa fa-chart-line text-info"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <p class="text-muted mb-1 small">Conversion Rate</p>
                                                <h3 class="mb-0 text-success">
                                                    <t t-if="state.dashboardData.my_opportunities_count > 0">
                                                        <t t-esc="Math.round((state.dashboardData.my_won_opportunities_count / (state.dashboardData.my_opportunities_count + state.dashboardData.my_won_opportunities_count)) * 100)"/>%
                                                    </t>
                                                    <t t-else="">0%</t>
                                                </h3>
                                            </div>
                                            <div class="icon-wrapper bg-success bg-opacity-10 rounded-circle p-3">
                                                <i class="fa fa-percent text-success"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- KPI Cards Row 2 - Sales -->
                        <div class="row mb-4">
                            <div class="col-lg-2 col-md-4 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100" t-on-click="() => openMyQuotations('draft')">
                                    <div class="card-body text-center">
                                        <h4 class="display-6 fw-bold text-secondary">
                                            <t t-esc="state.dashboardData.my_draft_quotations_count"/>
                                        </h4>
                                        <p class="text-muted mb-0 small">Draft Quotations</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-4 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100" t-on-click="() => openMyQuotations('sent')">
                                    <div class="card-body text-center">
                                        <h4 class="display-6 fw-bold text-info">
                                            <t t-esc="state.dashboardData.my_sent_quotations_count"/>
                                        </h4>
                                        <p class="text-muted mb-0 small">Sent Quotations</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-4 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100" t-on-click="() => openMyQuotations('confirmed')">
                                    <div class="card-body text-center">
                                        <h4 class="display-6 fw-bold text-success">
                                            <t t-esc="state.dashboardData.my_confirmed_quotations_count"/>
                                        </h4>
                                        <p class="text-muted mb-0 small">Confirmed Orders</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-4 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100">
                                    <div class="card-body text-center">
                                        <h4 class="display-6 fw-bold text-success">
                                            <t t-esc="formatCurrency(state.showTeamView ? state.dashboardData.team_confirmed_quotations_revenue : state.dashboardData.my_confirmed_quotations_revenue)"/>
                                        </h4>
                                        <p class="text-muted mb-0 small">Sales Revenue</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-4 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100" t-on-click="() => openMyProformas('draft')">
                                    <div class="card-body text-center">
                                        <h4 class="display-6 fw-bold text-secondary">
                                            <t t-esc="state.dashboardData.my_draft_proformas_count"/>
                                        </h4>
                                        <p class="text-muted mb-0 small">Draft Proformas</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-4 mb-3">
                                <div class="card kpi-card border-0 shadow-sm h-100">
                                    <div class="card-body text-center">
                                        <h4 class="display-6 fw-bold text-primary">
                                            <t t-esc="formatCurrency(state.showTeamView ? state.dashboardData.team_confirmed_proformas_total : state.dashboardData.my_confirmed_proformas_total)"/>
                                        </h4>
                                        <p class="text-muted mb-0 small">Proforma Revenue</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Charts Row 1 -->
                        <div class="row mb-4">
                            <div class="col-lg-8 mb-3">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-header bg-white border-bottom-0">
                                        <h5 class="mb-0">Monthly Sales Trend</h5>
                                    </div>
                                    <div class="card-body">
                                        <div style="height: 300px;">
                                            <canvas t-ref="monthlySalesChart"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-4 mb-3">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-header bg-white border-bottom-0">
                                        <h5 class="mb-0">Sales Funnel</h5>
                                    </div>
                                    <div class="card-body">
                                        <div style="height: 300px;">
                                            <canvas t-ref="leadConversionChart"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Charts Row 2 -->
                        <div class="row mb-4">
                            <div class="col-lg-4 mb-3">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-header bg-white border-bottom-0">
                                        <h5 class="mb-0">Sales by Category</h5>
                                    </div>
                                    <div class="card-body">
                                        <div style="height: 250px;">
                                            <canvas t-ref="productSalesChart"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4 mb-3">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">Top Customers</h5>
                                        <button class="btn btn-sm btn-link" t-on-click="openTopCustomers">View All</button>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-sm table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Customer</th>
                                                        <th class="text-end">Revenue</th>
                                                        <th class="text-center">Orders</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-if="state.dashboardData.top_customers">
                                                        <tr t-foreach="state.dashboardData.top_customers" t-as="customer" t-key="customer.name">
                                                            <td class="text-truncate" style="max-width: 150px;">
                                                                <t t-esc="customer.name"/>
                                                            </td>
                                                            <td class="text-end">
                                                                <t t-esc="formatCurrency(customer.revenue)"/>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="badge bg-secondary">
                                                                    <t t-esc="customer.order_count"/>
                                                                </span>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div t-if="state.dashboardData.is_sales_manager" class="col-lg-4 mb-3">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-header bg-white border-bottom-0">
                                        <h5 class="mb-0">Team Performance</h5>
                                    </div>
                                    <div class="card-body">
                                        <div style="height: 250px;">
                                            <canvas t-ref="teamPerformanceChart"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>