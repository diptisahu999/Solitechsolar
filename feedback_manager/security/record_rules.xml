<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">

    <!-- Assigned users (or creator) can see a record -->
    <record id="rule_feedback_assigned_or_creator" model="ir.rule">
      <field name="name">Feedback: assigned or creator</field>
      <field name="model_id" ref="model_feedback_record"/>
      <field name="domain_force">
        ["|",
           ("create_uid","=",user.id),
           ("assigned_user_ids","in",[user.id])
        ]
      </field>
      <field name="groups" eval="[(4, ref('feedback_manager.group_feedback_user'))]"/>
    </record>

  </data>
</odoo>
