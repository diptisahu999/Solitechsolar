<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="hr_expense_view_form_inherit_user_proxy_fixed" model="ir.ui.view">
      <field name="name">hr.expense.form.inherit.paid_by_fixed</field>
      <field name="model">hr.expense</field>
      <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
      <field name="arch" type="xml">

        <xpath expr="//field[@name='employee_id']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>

        <xpath expr="//field[@name='employee_id']" position="after">
          <field name="is_current_user_approver" invisible="1"/>
          <field name="paid_by_user_id"
                 force_save="1"
                 required="1"
                 readonly="not is_current_user_approver"
                 options="{'no_open': True, 'no_create': True}"/>
        </xpath>

      </field>
    </record>
  </data>
</odoo>