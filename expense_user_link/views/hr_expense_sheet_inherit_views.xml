<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="hr_expense_sheet_view_form_inherit_mark_paid_toggle" model="ir.ui.view">
      <field name="name">hr.expense.sheet.form.inherit.mark_paid.toggle</field>
      <field name="model">hr.expense.sheet</field>
      <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
            <button name="action_mark_as_paid" 
                    type="object" 
                    string="Mark as Paid" 
                    class="oe_highlight"
                    invisible="state != 'approve' or manual_payment_state != 'not_paid'"/>
            <button name="action_mark_as_unpaid" 
                    type="object" 
                    string="Mark as Unpaid"
                    invisible="manual_payment_state != 'paid'"/>
        </xpath>
        <xpath expr="//field[@name='employee_id']" position="after">
            <field name="manual_payment_state" widget="badge" decoration-success="manual_payment_state == 'paid'" decoration-danger="manual_payment_state == 'not_paid'"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>