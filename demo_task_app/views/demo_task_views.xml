<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_demo_task_form" model="ir.ui.view">
        <field name="name">demo.task.form</field>
        <field name="model">demo.task</field>
        <field name="arch" type="xml">
            <form string="Task">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Follow up with client..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="manager_id"/>
                        </group>
                        <group>
                            <field name="deadline"/>
                            <field name="priority" widget="priority"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_demo_task_tree" model="ir.ui.view">
        <field name="name">demo.task.tree</field>
        <field name="model">demo.task</field>
        <field name="arch" type="xml">
            <tree string="Tasks">
                <field name="name"/>
                <field name="user_id"/>
                <field name="manager_id"/>
                <field name="deadline"/>
                <field name="priority" widget="priority"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_demo_task_main" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">demo.task</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new task
            </p>
        </field>
    </record>
</odoo>
