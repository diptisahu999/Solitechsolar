<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="city_mst_view_form" model="ir.ui.view">
        <field name="name">city.mst.view.form</field>
        <field name="model">city.mst</field>
        <field name="arch" type="xml">
            <form string="City">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="state_id" options="{'no_quick_create' : True}"/>
                        </group>    
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="city_mst_view_tree" model="ir.ui.view">
        <field name="name">city.mst.view.tree</field>
        <field name="model">city.mst</field>
        <field name="arch" type="xml">
            <tree string="City" sample="1">
                <field name="name" />
                <field name="state_id" />
            </tree>
        </field>
    </record>

    <record id="city_mst_action" model="ir.actions.act_window">
        <field name="name">City</field>
        <field name="res_model">city.mst</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="latest_status_mst_view_form" model="ir.ui.view">
        <field name="name">latest.status.mst.view.form</field>
        <field name="model">latest.status.mst</field>
        <field name="arch" type="xml">
            <form string="Latest Status">
