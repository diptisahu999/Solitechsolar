                        </group>    
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="latest_status_mst_view_tree" model="ir.ui.view">
        <field name="name">latest.status.mst.view.tree</field>
        <field name="model">latest.status.mst</field>
        <field name="arch" type="xml">
            <tree string="Latest Status" sample="1">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="latest_status_mst_action" model="ir.actions.act_window">
        <field name="name">Latest Status</field>
        <field name="res_model">latest.status.mst</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="company_mst_view_form" model="ir.ui.view">
        <field name="name">company.mst.view.form</field>
        <field name="model">company.mst</field>
        <field name="arch" type="xml">
            <form string="Company">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>    
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="company_mst_view_tree" model="ir.ui.view">
        <field name="name">company.mst.view.tree</field>
        <field name="model">company.mst</field>
        <field name="arch" type="xml">
            <tree string="Company" sample="1">
                <field name="name" />
