<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_details_wiz_form" model="ir.ui.view">
        <field name="name">Assign Details</field>
        <field name="model">project.details.wiz</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <group>
                            <field name="type_field" required="1"/>
                            <field name="city_id" options="{'no_create': True,'no_open': True}" invisible="type_field != 'city'"/>
                            <field name="source_id" options="{'no_create': True,'no_open': True}" invisible="type_field != 'source'"/>
                            <field name="project_type_id" options="{'no_create': True,'no_open': True}" invisible="type_field != 'project_type'"/>
                            <field name="stage_type" invisible="type_field != 'stage'"/>
                            <field name="boq_type" invisible="type_field != 'boq_status'"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Assign" name="action_confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_details_wiz" model="ir.actions.act_window">
        <field name="name">Assign Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.details.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
