<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="courier_mst_view_form" model="ir.ui.view">
        <field name="name">courier.mst.view.form</field>
        <field name="model">courier.mst</field>
        <field name="arch" type="xml">
            <form string="Courier">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>    
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="courier_mst_view_tree" model="ir.ui.view">
        <field name="name">courier.mst.view.tree</field>
        <field name="model">courier.mst</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="courier_mst_action" model="ir.actions.act_window">
        <field name="name">Courier</field>
        <field name="res_model">courier.mst</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="courier_mst_menu"
        name="Courier"
        action="courier_mst_action"
        parent="stock.menu_warehouse_config"
        sequence="9"/>

</odoo>