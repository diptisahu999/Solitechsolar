<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="base.menu_apps" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>

        <record id="project.menu_main_pm" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('project.group_project_manager')])]"/>
        </record>

        <record id="hr.menu_hr_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('hr.group_hr_manager')])]"/>
        </record>


        <record id="base.menu_administration" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>

        <record id="stock.menu_stock_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('stock.group_stock_manager')])]"/>
        </record>

        <record id="purchase.menu_purchase_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('purchase.group_purchase_manager')])]"/>
        </record>
        
        <record id="spreadsheet_dashboard.spreadsheet_dashboard_menu_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        </record>

    </data>
    <data>
        <!-- Hide menus for all users -->
        <record id="project_todo.menu_todo_todos" model="ir.ui.menu">
            <field name="active" eval="False"/>
        </record>
        <record id="mail.menu_root_discuss" model="ir.ui.menu">
             <field name="active" eval="False"/>
        </record>

        <!-- Hide 'My Approvals' menu specifically for Admin user -->
        <record id="rule_hide_my_approvals_admin" model="ir.rule">
            <field name="name">Hide My Approvals Menu from Admin</field>
            <field name="model_id" ref="base.model_ir_ui_menu"/>
            <field name="domain_force" eval="&quot;[(1, '=', 1)] if not (user.id == %d or user.has_group('crm_17.group_unit_price_access')) else [('id', '!=', %d)]&quot; % (ref('base.user_admin'), ref('menu_sale_my_price_requests'))"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>