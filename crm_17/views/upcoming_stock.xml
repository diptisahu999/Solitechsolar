<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="upcoming_stock_view_tree" model="ir.ui.view">
        <field name="name">upcoming.stock.view.tree</field>
        <field name="model">upcoming.stock</field>
        <field name="arch" type="xml">
            <tree string="Upcoming Stock" editable="bottom">
                <field name="date" />
                <field name="contener_no" />
                <field name="product_id" options="{'no_create': True,'no_open': True}"/>
                <field name="qty" />
            </tree>
        </field>
    </record>

    <record id="upcoming_stock_search" model="ir.ui.view">
        <field name="name">upcoming.stock.search</field>
        <field name="model">upcoming.stock</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id" string="Product"/>
                <field name="contener_no" string="Container No."/>

                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Schedule Date" name="group_by_date" domain="[]" context="{'group_by': 'date'}"/>
                    <filter string="Product" name="group_by_product_id" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter string="Container No." name="group_by_contener_no" domain="[]" context="{'group_by': 'contener_no'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="upcoming_stock_action" model="ir.actions.act_window">
        <field name="name">Upcoming Stock</field>
        <field name="res_model">upcoming.stock</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="upcoming_stock_view_tree"/>
    </record>

    <menuitem
        id="upcoming_stock_menu"
        name="Upcoming Stock"
        action="upcoming_stock_action"
        parent="stock.menu_stock_transfers"
        sequence="29"/>

    <menuitem
        id="upcoming_stock_product_menu"
        name="Upcoming Stock"
        action="upcoming_stock_action"
        parent="stock.menu_stock_inventory_control"
        sequence="1"/>

</odoo>
