<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='coupon_settings']" position="after">
                <setting id="discount_order_lines_sale_per" invisible="0">
                    <label for="saleperson_per"/>
                    <field name="saleperson_per"/>
               </setting>
               <setting id="min_unit_price_watt_setting" groups="base.group_system" invisible="0">
                   <label for="min_unit_price_watt"/>
                   <field name="min_unit_price_watt"/>
               </setting>

               <setting id="global_prices_setting" groups="crm_17.group_global_price_update" invisible="0">
                   <div class="o_setting_left_pane"/>
                   <div class="o_setting_right_pane">
                       <label for="global_dcr_rate" string="Global DCR Price (₹)"/>
                       <field name="global_dcr_rate"/>
                       <br/>
                       <label for="global_non_dcr_rate" string="Global NON-DCR Price (₹)"/>
                       <field name="global_non_dcr_rate"/>
                       <br/>
                       <label for="global_dcr_min_unit_price" string="Global DCR Min Unit Price (₹/Wp)"/>
                       <field name="global_dcr_min_unit_price"/>
                       <br/>
                       <label for="global_min_unit_price" string="Global Non-DCR Min Unit Price (₹/Wp)"/>
                       <field name="global_min_unit_price"/>
                       
                       <div class="mt8">
                           <button name="action_apply_global_prices" 
                                   string="Apply to All Products" 
                                   type="object" 
                                   class="btn-primary"
                                   confirm="This will update DCR/Non-DCR prices and Min Unit Prices for ALL products. Are you sure?"/>
                       </div>
                   </div>
               </setting>
            </xpath>
        </field>
    </record>

    <record id="account_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">account.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="invoicing_settings" position="inside">
                <setting id="discount_order_lines_inv_per" invisible="0">
                    <label for="invperson_per"/>
                    <field name="invperson_per"/>
               </setting>
            </block>
        </field>
    </record>

</odoo>
