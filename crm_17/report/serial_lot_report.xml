<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="serial_lot_report">
            <t t-call="web.html_container">
                <!-- page-break-inside: avoid; -->
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="">
                        <table style="width:100%; ">
                            <tr>
                                <td style="position: relative; text-align: center; vertical-align: middle; padding-top:5px;">
                                    <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; font-size: 14px; height: 100%; ">
                                        <div style="font-size: 10px; text-align: center; overflow: hidden; white-space: normal; height: 2.6em; line-height: 1.3em;">
                                            <span t-field="o.product_id.barcode">Demo Product</span>
                                        </div>
                                        <div>
                                            <span t-field="o.name" t-options="{'widget': 'barcode', 'img_style': 'width:100%; height:25%'}" >Customizable Desk</span>
                                            <span style="font-size: 10px;" t-field="o.name"></span>
                                        </div>
                                    </div>
                                </td>
                                <td width="10">
                                    <div>
                                    </div>
                                </td>
                                <td style="position: relative; text-align: center; vertical-align: middle; padding-top:5px;">
                                    <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; font-size: 14px; height: 100%; ">
                                        <div style="font-size: 10px; text-align: center; overflow: hidden; white-space: normal; height: 2.6em; line-height: 1.3em;">
                                            <span t-field="o.product_id.barcode">Demo Product</span>
                                        </div>
                                        <div>
                                            <span t-field="o.name" t-options="{'widget': 'barcode', 'img_style': 'width:100%; height:25%'}">Customizable Desk</span>
                                            <span style="font-size: 10px;" t-field="o.name"></span>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <p style="page-break-before:always;"> </p>

                    </div>
                </t>
            </t>
        </template>
    </data>
    </odoo>
