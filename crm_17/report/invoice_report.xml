                            <t t-if="service_amt.product_id.extra_charges">
                                <tr>
                                    <t t-set="tot_service_amt" t-value="tot_service_amt + service_amt.price_subtotal"/>
                                </tr>
                            </t>
                        </t>
                        <table style="width: 100%;border: 1px solid black;">
                            <tr>
                                <td style="width: 80%;border: 1px solid black;text-align: right;">
                                    <b><span style="padding-right:6px;" >Total value</span></b>
                                </td>
                                <td style="width: 20%;border: 1px solid black;padding-right:7px;text-align: right;">
                                    <t t-if="o.currency_id.position == 'before'">
                                        <span t-esc="o.currency_id.symbol" /> <span t-esc="'%.2f' % (o.amount_untaxed - tot_service_amt)" />
                                    </t>
                                    <t t-if="o.currency_id.position == 'after'">
                                        <span t-esc="'%.2f' % (o.amount_untaxed - tot_service_amt)" /> <span t-esc="o.currency_id.symbol" />
                                    </t>
                                </td>
                            </tr>
                            <t t-foreach="order_line" t-as="service">
                                <t t-if="service.product_id.extra_charges">
                                    <tr>
                                        <td style="border: 1px solid black;text-align: right;">
                                            <b><span style="padding:6px;" ><span t-field="service.product_id.name"/></span></b>
                                        </td>
                                        <td style="border: 1px solid black;padding-right:7px;text-align: right;">
                                            <t t-if="o.currency_id.position == 'before'">
                                                <span t-esc="o.currency_id.symbol" /> <span t-esc="'%.2f' % (service.price_subtotal)" />
                                            </t>
                                            <t t-if="o.currency_id.position == 'after'">
                                                <span t-esc="'%.2f' % (service.price_subtotal)" /> <span t-esc="o.currency_id.symbol" />
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                                <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                    <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                    <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                        <tr>
                                            <td style="width: 80%;border: 1px solid black;text-align: right;" class="text-end"><b><span style="padding-right:7px;" class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/></b></td>
                                            <td class="text-end o_price_total" style="width: 20%;border: 1px solid black;padding-right:7px;">
                                                <span  t-esc="amount_by_group['formatted_tax_group_amount']" />
                                            </td>
                                            <!-- <t t-if="tax_totals['display_tax_base']">
                                                <td class="text-end">
                                                    <span t-esc="amount_by_group['tax_group_name']"/>
                                                </td>
                                                <td class="text-end o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td class="text-end"><span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/></td>
                                                <td class="text-end o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" />
                                                </td>
                                            </t> -->
                                        </tr>
                                    </t>

                                </t>
                            <tr>
                                <td style="border: 1px solid black;text-align: right;">
                                    <b><span style="padding:6px;" >Total</span></b>
                                </td>
                                <t t-set="amount_total" t-value="round(o.amount_total)" />
                                <td style="border: 1px solid black;padding-right:7px;text-align: right;">
                                    <t t-if="o.currency_id.position == 'before'">
                                        <span t-esc="o.currency_id.symbol" /> <span t-esc="'%.2f' % (amount_total)" />
                                    </t>
                                    <t t-if="o.currency_id.position == 'after'">
                                        <span t-esc="'%.2f' % (amount_total)" /> <span t-esc="o.currency_id.symbol" />
                                    </t>
                                </td>
                            </tr>
                        </table>
                        
                        <br/>
                        <b><span style="font-size:15px;">Amount in words : </span><span style="font-size:15px;" t-esc="o.amount_to_text((o.amount_total), 'INR')"/> <span style="padding-left:4px;font-size:15px;">Only</span></b>
                        
                        <br/>
                        <br/>
                        <div class="row" style="page-break-inside: avoid;">
                            <div class="col-6">
                                <div style="font-size:14px;">
                                    <span style="font-size:14px;">Best Regards</span>
                                    <br/><b><span t-esc="user.signature" style="font-size:14px;"/></b>
                                </div> 
                            </div>
                            <div class="col-3">
                                <div>
                                    <right>
                                        <t t-if="o.company_id.iso_img">
                                            <img class="img img-responsive" t-att-src="image_data_uri(o.company_id.iso_img)" width="170" height="130" style="padding-left:30px;padding-bottom:15px;text-align: right;"/>
                                        </t>
                                    </right>
                                </div>                        
                            </div>
                            <div class="col-3">
                                <div>
                                    <right>
                                        <t t-if="o.company_id.sing">
                                            <img class="img img-responsive" t-att-src="image_data_uri(o.company_id.sing)" width="170" height="130" style="padding-left:30px;padding-bottom:15px;text-align: right;"/>
                                        </t>
                                    </right>
                                </div>                        
                            </div>
                        </div>
                    </div>
                </t>

            </t>
        </template>
    </data>
</odoo>