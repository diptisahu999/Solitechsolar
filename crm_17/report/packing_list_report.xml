<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="packing_list_report">
            <t t-call="web.basic_layout">
                
                <t t-foreach="docs" t-as="o">
                    <style>
                        span {
                            <!-- font-size:11px; -->
                            font-weight: bold;
                        }
                        table {
                            <!-- font-size:11px; -->
                        }
                        td {
                            padding-top:2px;
                            padding-left:5px;
                            font-weight: bold;
                            <!-- font-size:11px; -->
                        }
                        td.no-border {
                            border: none !important;
                        }
                        tr.no-border {
                            border: none !important;
                        }
                        table.no-border {
                            border: none !important;
                        }
                    </style>
                    <div class="page">
                        <table style="width:100%;border-bottom: none !important;" v-align="top">
                            <tr>
                                <td class="no-border" width="10%" style="border-right:none;">
                                    <t t-if="o.company_id.logo">
                                        <img class="img img-responsive" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="width:160px; height:100px;" />
                                    </t>
                                </td>
                                <td class="no-border" width="90%" style="vertical-align: middle; text-align: center;" >
                                    <center>                                        
                                        <b><span style="padding-right:5px;font-size:20px;">PACKING LIST (BOX WISE)</span></b>
                                    </center>
                                </td>
                            </tr>
                            <tr>
                                <td class="no-border" colspan="2" style="border-right:none;">
                                    <span>DATE : </span><t t-if="o.scheduled_date"><span  t-esc="o.scheduled_date.strftime('%d/%m/%Y')"/></t>
                                </td>
                            </tr>
                            <tr>
                                <td class="no-border" colspan="2" style="border-right:none;">
                                    <span>Invoice Number : </span><t t-if="o.get_account_move()"><span  t-esc="o.get_account_move().pi_chr"/></t>
                                </td>
                            </tr>
                            <tr>
                                <td class="no-border" colspan="2" style="border-right:none;">
                                    <span>Client Name : </span><span  t-esc="o.partner_id.name"/>
                                </td>
                            </tr>                            
                        </table>
                        <table style="width: 100%;border-top: none !important;">
                            <tr class="no-border" style="">
                                <th style="padding:3px;border: 1px solid black;width:16%;"><center>NUMBER OF BOX</center></th>
                                <th style="padding:3px;border: 1px solid black;width:14 %;text-align:center;">ITEM CODE</th>
                                <th style="padding:3px;border: 1px solid black;width:50%;text-align:center;">PRODUCT</th>
                                <th style="padding:3px;border: 1px solid black;width:9%;text-align:center;">QTY</th>
                                <th style="padding:3px;border: 1px solid black;width:13%;"><center>TOTAL BOX</center></th>
                            </tr>
                                <t t-foreach="o.move_ids_without_package" t-as="line">
                                    <tr class="no-border">
                                        <td class="no-border" style="border-right: 1px solid black !important;vertical-align: middle;text-align:center;">
                                            <span t-field="line.number_box"/>
                                        </td>
                                        <td class="no-border" style="border-right: 1px solid black !important;vertical-align: middle;text-align:center;">
                                            <span t-field="line.product_id.barcode"/>
                                        </td>
                                        <td class="no-border" style="border-right: 1px solid black !important;vertical-align: middle;text-align:center;">
                                            <span t-field="line.product_id.name"/>
                                        </td>
                                        <td class="no-border" style="border-right: 1px solid black !important;vertical-align: middle;text-align:center;">
                                            <span t-esc="line.quantity"/>
                                        </td>
                                        <td class="no-border" style="border-right: 1px solid black !important;vertical-align: middle;text-align:center;">
                                            <span t-field="line.box_qty"/>
                                        </td>
                                    </tr>
                                </t>
                        </table>
                        <table style="width: 100%;border-to: none !important;">
                            <tr>
                                <td width="80%" rowspan="2">
                                </td>
                                <td width="20%" style="text-align:center;">
                                    <t t-if="o.company_id.sing">
                                        <img class="img img-responsive" t-att-src="image_data_uri(o.company_id.sing)" alt="Logo" style="width:120px; height:80px;" />
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:center;">
                                    <span>CHECK BY</span>
                                </td>
                            </tr>
                        </table>
                        
                
                    </div>
                </t>

            </t>
        </template>
    </data>
</odoo>