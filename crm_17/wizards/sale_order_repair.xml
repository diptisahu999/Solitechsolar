<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_repair_wiz_form" model="ir.ui.view">
        <field name="name">Sale Quotations</field>
        <field name="model">sale.order.repair.wiz</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <group>
                            <field name="date" required="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_quotations" string="Create Quotations" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_repair_wiz" model="ir.actions.act_window">
        <field name="name">Sale Quotations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.repair.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="old_product_serial_wiz_form" model="ir.ui.view">
        <field name="name">Old Product Serial Genrate</field>
        <field name="model">old.product.serial.wiz</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <group>
                            <field name="serial_name" readonly="1" force_save="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_genrate_searial" string="Genrate Serial" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_old_product_serial_wiz" model="ir.actions.act_window">
        <field name="name">Old Product Serial Genrate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">old.product.serial.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
