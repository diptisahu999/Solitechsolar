<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tds_tcs_report_wiz_form" model="ir.ui.view">
        <field name="name">TDS Report</field>
        <field name="model">tds.tcs.report</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <group>
                            <field name="from_date" />
                            <field name="partner_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                            <field name="company_id"  invisible="1"/>
                        </group>
                        <group>
                            <field name="to_date" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="generate_pdf" string="Generate Pdf" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tds_tcs_report_wiz" model="ir.actions.act_window">
        <field name="name">TDS Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tds.tcs.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="tds_tcs_report_wiz_menu"
        name="TDS Report"
        action="action_tds_tcs_report_wiz"
        parent="account.account_reports_management_menu"
        sequence="21"/>

</odoo>
